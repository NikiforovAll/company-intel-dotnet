{
  "mcpServers": {
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp@latest"
      ]
    },
    "aspire": {
      "command": "aspire",
      "args": [
        "mcp",
        "start"
      ]
    },
    "qdrant": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "mcp-server-qdrant"
      ],
      "env": {
        "QDRANT_URL": "http://localhost:6333",
        "QDRANT_API_KEY": "localdev",
        "COLLECTION_NAME": "documents"
      }
    }
  }
}
